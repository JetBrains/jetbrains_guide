{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "./lib/**/*"
  ]
}
